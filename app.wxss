/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
   padding:40rpx;
}

page{background: #2d2f3b;height: 100%;}


.weather-card{width: 100%; height: 100%; background: #fff; box-shadow: 0 0 15rpx rgba(0,0,0,0.3);border-radius: 15rpx; overflow: hidden;}

view{font-family: microsoft yahei; box-sizing: border-box;}

.today{width: 100%; height: 60%; position: relative}
.other{width: 100%; height: 40%; background: #fff;}


.today .top{position: absolute; top: 0; left: 0; width: 100%; height: 30rpx;padding: 30rpx;}
.today .top .range{font-size: 36rpx; color: #fff; float: left}
.today .top .refresh{float: right}
.today .top .refresh image{width: 40rpx; height: 40rpx;}

.today .middle{width: 200rpx; height: 200rpx; position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);}
.today .middle image{width: 200rpx; height: 200rpx}

.today .bottom{width: 100%; height: 145rpx; position: absolute; bottom: 0; left: 0; padding: 20rpx}
.today .bottom .temp{font-size: 120rpx; color: #fff; float: left; line-height: 100%;}
.today .bottom .city-time{float: right;}
.today .bottom .city-time .day{color: #fff; font-size: 60rpx; text-align: right}
.today .bottom .city-time .city{color: #fff; font-size: 36rpx; text-align: right}


.other scroll-view{width: 100%; height: 100%; white-space: nowrap;}
.other scroll-view .scroll-view-item{width: 33.33%; height: 100%; display: inline-block; border-right: 1px solid #edede9;}

.other scroll-view .scroll-view-item .top{width: 100%; height: 25%; font-size: 24rpx; color: #bbb}
.other scroll-view .scroll-view-item .middle{width: 100%; height: 50%;}
.other scroll-view .scroll-view-item .middle image{width: 60rpx; height: 60rpx; opacity: 0.5}
.other scroll-view .scroll-view-item .bottom{width: 100%; height: 25%; font-size: 24rpx; color: #bbb}

